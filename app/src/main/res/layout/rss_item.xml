<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingHorizontal="@dimen/padding_16dp"
    android:paddingVertical="@dimen/padding_8dp">

    <ImageView
        android:id="@+id/image_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="@dimen/image_size_100dp"
        android:maxHeight="@dimen/image_size_100dp"
        android:minWidth="@dimen/image_size_100dp"
        android:minHeight="@dimen/image_size_100dp"
        android:src="@drawable/default_image"
        app:layout_constraintEnd_toStartOf="@+id/text_title_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_title_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_100dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingStart="10dp"
        android:text="Chất Italy trong bản năng huấn luyện của Zidane Chất Italy trong bản năng huấn luyện của Zidane Chất Italy trong bản năng huấn luyện của Zidane"
        android:textColor="@color/color_black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_time_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:paddingStart="10dp"
        android:text="1h"
        android:textColor="@color/color_description"
        app:layout_constraintEnd_toEndOf="@+id/text_title_item"
        app:layout_constraintStart_toStartOf="@+id/text_title_item"
        app:layout_constraintTop_toBottomOf="@+id/text_title_item" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_description_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4dp"
        android:maxLines="100"
        android:paddingStart="10dp"
        android:text="Ba năm đầu tiên ở Juventus, dù ít điểm nhấn, là bản lề giúp Zinedine Zidane định hình phong cách cầm quân về sau. "
        android:textColor="@color/color_description"
        app:layout_constraintEnd_toEndOf="@+id/text_time_item"
        app:layout_constraintStart_toStartOf="@+id/text_time_item"
        app:layout_constraintTop_toBottomOf="@+id/text_time_item" />

</androidx.constraintlayout.widget.ConstraintLayout>